            <% include ../../layout/head %>
			<% include ../../layout/global-vendors %>
				<% include ../../layout/header %>
					<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

						<!-- begin:: Content -->
						<div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
                            <div class="row">
                                <div class="col-lg-12">	
                                    <!-- begin:: Portlet -->
                                    <div class="kt-portlet kt-portlet--last kt-portlet--head-lg kt-portlet--responsive-mobile" id="kt_page_portlet">
                                        <div class="kt-portlet__head kt-portlet__head--lg">
                                            <div class="kt-portlet__head-label">
                                                <span class="kt-portlet__head-icon">
                                                    <i class="kt-font-brand flaticon2-line-chart"></i>
                                                </span>
                                                <h3 class="kt-portlet__head-title">
                                                    Add Customer
                                                </h3>
                                            </div>
                                            <div class="kt-portlet__head-toolbar">
                                                <a href="/admin/customer" class="btn btn-clean kt-margin-r-10">
                                                    <i class="la la-arrow-left"></i>
                                                    <span class="kt-hidden-mobile">Cancel</span>
                                                </a>
                                                <div class="btn-group">
                                                    <button id="add-customer" type="submit" class="btn btn-brand">
                                                        <i class="la la-check"></i> 
                                                        <span class="kt-hidden-mobile">Save</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="kt-portlet__body">
                                            <% include ../../../default/alerts %>
                                            <form id="addCustomerForm" action="/admin/customer/add-customer" class="kt-form kt-form--label-right" method="post">
                                                <!--begin: Add Customer -->
                                                <div class="form-group form-group-last kt-hide">
                                                    <div class="alert alert-danger" role="alert" id="addCustomerAlert">
                                                        <div class="alert-icon"><i class="flaticon-warning"></i></div>
                                                          <div class="alert-text">
                                                            Oh snap! Change a few things up and try submitting again.
                                                        </div>
                                                        <div class="alert-close">
                                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                                <span aria-hidden="true"><i class="la la-close"></i></span>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="kt-section__body">
                                                    <div class="form-group row">
                                                        <label class="form-control-label col-xl-3 col-lg-3 col-form-label">Name *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <input name="customerName" class="form-control" placeholder="Your Name" type="text">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-xl-3 col-lg-3 col-form-label">Email *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                                <input name="customerMail" type="text" class="form-control" placeholder="email@example.com" aria-describedby="basic-addon1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="form-control-label col-xl-3 col-lg-3 col-form-label">Password *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <input name="customerPassword" class="form-control" type="password">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="form-control-label col-xl-3 col-lg-3 col-form-label">Confirm Password *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <input name="customerConfirmPassword" class="form-control" type="password">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-xl-3 col-lg-3 col-form-label">Phone</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                                                <input name="customerPhone" type="text" class="form-control" aria-describedby="basic-addon1" placeholder="+84123456789">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-xl-3 col-lg-3 col-form-label">Facebook</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-facebook"></i></span></div>
                                                                <input name="customerFacebook" type="text" class="form-control" placeholder="fb.com/example" aria-describedby="basic-addon1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-xl-3 col-lg-3 col-form-label">Ship Address *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-home"></i></span></div>
                                                                <input name="customerShipAddress" type="text" class="form-control" placeholder="Your Ship Address" aria-describedby="basic-addon1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="col-xl-3 col-lg-3 col-form-label">Ship Address 2</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                                            <div class="input-group">
                                                                <div class="input-group-prepend"><span class="input-group-text"><i class="la la-home"></i></span></div>
                                                                <input name="customerShipAddress2" type="text" class="form-control" placeholder="Your Ship Address 2" aria-describedby="basic-addon1">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group row">
                                                        <label class="form-control-label col-xl-3 col-lg-3 col-form-label">Level *</label>
                                                        <div class="col-lg-6 col-md-6 col-sm-12 form-group-sub">
                                                            <select name="customerLevel" class="form-control kt-selectpicker" id="customer-level-select" title="Choose level...">
                                                                <option value="1" data-content="<span class='kt-font-bold kt-font-danger'>Wholesaler</span>">Wholesaler</option>
                                                                <option value="2" data-content="<span class='kt-font-bold kt-font-primary'>Retailer</span>">Retailer</option>
                                                                <option value="3" data-content="<span class='kt-font-bold kt-font-success'>Customer</span>">Customer</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--end: Add Customer -->
                                            </form>
                                        </div>
                                    </div>
                                    <!-- end:: Portlet -->
                                </div>
                            </div>
						</div>

						<!-- end:: Content -->
					</div>

                <% include ../../layout/footer %>
            <% include ../../layout/footer-script %>
            <script>
                jQuery(document).ready(function() {
                    // Select Picker
                    $('.kt-selectpicker').selectpicker();
                    
                    $("#addCustomerForm").validate({
                        rules: {
                            customerName: {
                                required: true
                            },
                            customerMail: {
                                required: true,
                                email: true
                            },
                            customerPassword: {
                                required: true,
                                minlength: 5
                            },
                            customerShipAddress: {
                                required: true
                            },
                            customerConfirmPassword: {
                                required: true,
                                equalTo: "[name='customerPassword']"
                            },
                            customerLevel: {
                                required: true
                            },
                            customerPhone: {
                                digits: true
                            }
                        },
                        messages: {
                            customerConfirmPassword: {
                                equalTo: "Please enter the same password as above",
                            },
                        },
                    });

                    $('#add-customer').on('click', function(e){
                        e.preventDefault();
                        var form = $("#addCustomerForm");
                        
                        if(form.valid()){
                            form.submit();
                        }else{
                            // Do nothing
                        }
                        
                    });
                });

                
            </script>
	</body>

	<!-- end::Body -->
</html>